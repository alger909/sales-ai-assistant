.container {
    display: flex;
    flex-direction: column;
    height: 100vh;
    background-color: #f5f7fa;
    padding: 30rpx;
  }
  
  .header {
    margin-bottom: 40rpx;
  }
  
  .title {
    font-size: 40rpx;
    font-weight: bold;
    color: #333;
  }
  
  .task-list {
    width: 100%;
  }
  
  .task-item {
    background-color: white;
    border-radius: 16rpx;
    padding: 30rpx;
    margin-bottom: 20rpx;
    display: flex;
    justify-content: space-between;
    box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
  }
  
  .completed {
    opacity: 0.7;
  }
  
  .task-info {
    display: flex;
    flex-direction: column;
  }
  
  .client-name {
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 10rpx;
  }
  
  .task-type {
    font-size: 28rpx;
    color: #666;
  }
  
  .task-status {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
  }
  
  .due-date {
    font-size: 24rpx;
    color: #999;
    margin-bottom: 10rpx;
  }
  
  .status {
    font-size: 24rpx;
    padding: 4rpx 12rpx;
    border-radius: 10rpx;
  }
  
  .status-pending {
    background-color: #FEF3C7;
    color: #D97706;
  }
  
  .status-completed {
    background-color: #DEF7EC;
    color: #057A55;
  }
  
  .add-btn {
    position: fixed;
    right: 40rpx;
    bottom: 40rpx;
    width: 100rpx;
    height: 100rpx;
    background-color: #3B82F6;
    border-radius: 50rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 4rpx 12rpx rgba(59,130,246,0.3);
  }
  
  .add-icon {
    color: white;
    font-size: 50rpx;
    font-weight: bold;
  }